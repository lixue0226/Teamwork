<#import "layout/layout.html" as layout />

<#macro header>
</#macro>
<#assign header=header in layout />

<#macro footer>
<script type="text/javascript">
data = $.extend(
	data,{
		q : {
			username : ""
		},
		title : null,
		disabled : false,
		user : {
			status : 1
		},
		roles : [
			{id:1,name:"超级管理员"},
			{id:2,name:"审计管理员"}
		]
	}
);
methods = $.extend(
	methods,{
		reload: function(){
			var page = $("#jqGrid").jqGrid('getGridParam','page');
			$("#jqGrid").jqGrid('setGridParam',{ 
                postData:{'username': vm.q.username},
                page:page
            }).trigger("reloadGrid");
		},
		query: function () {
			vm.reload();
		},
		add: function(){
			vm.title = "新增用户";
			vm.user = {};
			vm.disabled = false;
			
			vm.dialog();
		},
		update: function(id){
			vm.title = "修改用户";
			vm.disabled = true;
			vm.get(id);
		},
		del: function(id){
			var ids = null;
			if(id != null || id != undefined){
				ids = [];
				ids.push(id);
			} else {
				ids = getSelectedRows();
			}
			if(ids == null){
				alert("请先选择删除的行!")
				return ;
			}
			confirm('确定要删除选中的记录？', function(){
				$.ajax({
					type: "POST",
				    url: baseURL + "/api/user/delete",
	                contentType: "application/json",
				    data: JSON.stringify(ids),
				    success: function(r){
						if(r.code == 0){
							alert('删除成功', function(){
	                            vm.reload();
							});
						}else{
							alert(r.msg);
						}
					}
				});
			
			});
		},
		get: function(id){
			$.get(baseURL + "/api/user/info/"+id, function(result){
				vm.user = result.data;
				vm.dialog();
			});
		},
		dialog: function(){
			layer.open({
				type: 1,
				skin: 'layui-layer-molv',
				title: vm.title,
				area: ['550px', '330px'],
				shadeClose: false,
				content: jQuery("#formLayer"),
				btn: ['确定','取消'],
				btn1: function (index) {
					$.ajax({
						type: "POST",
					    url: baseURL + "/api/user/save",
					    data: JSON.stringify(vm.user),
					    dataType: "json",
					    contentType : 'application/json',
					    success: function(r){
							if(r.code == 0){
								layer.close(index);
								alert(r.msg);
								vm.reload();
							}else{
								alert(r.msg);
							}
						}
					});
	            }
			});
		}
	}
);

$(function(){
	$("#jqGrid").jqGrid({
        url: baseURL + '/api/user/list',
        datatype: "json",
        colModel: [			
			{ label: '用户ID', name: 'id', index: "id", width: 45, key: true, sortable: false },
			{ label: '用户名', name: 'username', width: 75, sortable: false },
			{ label: '邮箱', name: 'email', width: 90, sortable: false },
			{ label: '角色', name: 'role', index: "role", width: 80, sortable: false, formatter: function(value, options, row){
				if(value == 1){
					return "超级管理员";
				} else if(value == 2){
					return "审计管理员";
				} else {
					return "";
				}
			}},
			{ label: '操作', name: 'id', index: "id", width: 80, sortable: false, formatter: function(value, options, row){
				return '<a class="btn btn-primary" onclick="vm.update('+value+')"><i class="fa fa-pencil-square-o"></i>&nbsp;修改</a> &nbsp;&nbsp;' + 
						'<a class="btn btn-primary" onclick="vm.del('+value+')"><i class="fa fa-trash-o"></i>&nbsp;删除</a>';
			}},
        ],
		viewrecords: false,
        height: 485,
        rowNum: 10,
		rowList : [10,30,50],
        rownumbers: true, 
        rownumWidth: 25, 
        autowidth:true,
        multiselect: true,
        pager: "#jqGridPager",
        sortable: false,
        jsonReader : {
            root: "page.list",
            page: "page.currPage",
            total: "page.totalPage",
            records: "page.totalCount"
        },
        prmNames : {
            page:"page", 
            rows:"limit", 
            order: "order"
        },
        gridComplete:function(){
        	//隐藏grid底部滚动条
        	$("#jqGrid").closest(".ui-jqgrid-bdiv").css({ "overflow-x" : "hidden" }); 
        }
    });
});
</script>
</#macro>
<#assign footer=footer in layout />

<@layout.doContent contentHeader="用户管理" contentLevel="系统管理" pageTitle="用户管理" contentDesc="">
<div class="grid-btn">
	<div class="form-group col-sm-2">
		<input type="text" class="form-control" v-model="q.username" @keyup.enter="query" placeholder="用户名">
	</div>
	<a class="btn btn-default" @click="query">查询</a>
	<a class="btn btn-primary" @click="add"><i class="fa fa-plus"></i>&nbsp;新增</a>
	<a class="btn btn-primary" onclick="vm.del()"><i class="fa fa-trash-o"></i>&nbsp;批量删除</a>
</div>
<table id="jqGrid"></table>
<div id="jqGridPager"></div>
<div id="formLayer" style="display: none;">
	<form class="form-horizontal">
		<div class="form-group">
		   	<div class="col-sm-2 control-label">用户名</div>
		   	<div class="col-sm-10">
		      <input type="text" class="form-control" v-model="user.username" :disabled="disabled" placeholder="登录账号"/>
		    </div>
		</div>
		<div class="form-group">
		   	<div class="col-sm-2 control-label">密码</div>
		   	<div class="col-sm-10">
		      <input type="text" class="form-control" v-model="user.password" placeholder="密码"/>
		    </div>
		</div>
		<div class="form-group">
		   	<div class="col-sm-2 control-label">邮箱</div>
		   	<div class="col-sm-10">
		      <input type="text" class="form-control" v-model="user.email" placeholder="邮箱"/>
		    </div>
		</div>
		<div class="form-group">
		   	<div class="col-sm-2 control-label">角色</div>
		   	<div class="col-sm-10">
			   	<label v-for="role in roles" class="checkbox-inline">
				  <input type="radio" name="role" :value="role.id" v-model="user.role">{{role.name}}
				</label>
			</div>
		</div>
	</form>
</div>
</@layout.doContent>